

#include <iostream>
using namespace std;
int main()
{
    int n=5;
    for(int i=0;i<n;i++){
        for(int j=0;j<n-i;j++){
            cout<<" ";
            
        }
        for(int k=i;k>0;k--){
            cout<<k;
        }
        for(int l=0;l<=i;l++){
            cout<<l;
        }
        
        cout<<endl;
    }

    return 0;
}
