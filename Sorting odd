

SortingOddPlaces:

#include <iostream>
#include<algorithm>
using namespace std;
int main()
{
    int arr[]={11,5,7,8,3,1,9,2};
    int n= sizeof(arr) / sizeof(arr[0]);
    int odd[] = {arr[1],arr[3],arr[5],arr[7],arr[9],arr[11]};
    
    sort(odd, odd+4);
    cout<<"Sorted Odd Places of Array: "<<endl;
    for(int i=0;i<4;i++){
        cout<<odd[i]<<" ";
    }
    return 0;
 }
