// C++ program to demonstrate 
// the signed modifier
#include <iostream>
using namespace std;

// Driver Code
int main()
{
    cout << "Size of signed int : " << 
             sizeof(signed int) << 
             " bytes" << endl;
    cout << "Size of signed char : " << 
             sizeof(signed char) << 
             " bytes" << endl;

    return 0;
}
